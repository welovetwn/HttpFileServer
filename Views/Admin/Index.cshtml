@model HttpFileServer.Models.AdminViewModel

@{
    ViewData["Title"] = "管理後台";
}

<h2>使用者管理</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>帳號</th>
            <th>角色</th>
            <th>動作</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model.Users)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Role</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="@Url.Action("EditUser", new { username = user.Username })">修改密碼</a>
                    <form method="post" asp-action="DeleteUser" class="d-inline" onsubmit="return confirm('確定要刪除 @user.Username 嗎？');">
                        <input type="hidden" name="username" value="@user.Username" />
                        <button type="submit" class="btn btn-sm btn-danger">刪除</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-success" href="@Url.Action("AddUser")">新增使用者</a>

<hr />

<h2>資料夾管理</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>資料夾名稱</th>
            <th>路徑</th>
            <th>授權使用者</th>
            <th>動作</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var folder in Model.Folders)
        {
            <tr>
                <td>@folder.Name</td>
                <td>@folder.Path</td>
                <td>@string.Join(", ", folder.AllowedUsers)</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="@Url.Action("EditFolder", new { folderName = folder.Name })">編輯授權</a>
                    <form method="post" asp-action="DeleteFolder" class="d-inline" onsubmit="return confirm('確定刪除資料夾 @folder.Name 設定？');">
                        <input type="hidden" name="folderName" value="@folder.Name" />
                        <button type="submit" class="btn btn-sm btn-danger">刪除</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-success" href="@Url.Action("AddFolder")">新增資料夾</a>
