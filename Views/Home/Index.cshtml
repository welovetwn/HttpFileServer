<!-- Views/Home/Index.cshtml -->

@using System.Security.Claims
@using HttpFileServer.Models

@{
    ViewData["Title"] = "首頁";
    var isAuthenticated = User.Identity?.IsAuthenticated ?? false;
    var username = isAuthenticated ? User.Identity!.Name : "";

    // ✅ 透過 Claim 取得 PermissionLevel（使用者登入時儲存的 Claim）
    var permissionClaim = User.Claims.FirstOrDefault(c => c.Type == "PermissionLevel");
    // ✅ 使用 TryParse 避免 FormatException
    int permissionLevel = 0;
    if (permissionClaim != null && !string.IsNullOrWhiteSpace(permissionClaim.Value))
    {
        int.TryParse(permissionClaim.Value, out permissionLevel);
    }

    // ✅ 只有 PermissionLevel == Admin (99) 才是 Admin
    var isAdmin = permissionLevel == (int)PermissionLevel.Admin;
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="text-center">
        <h1 class="display-4 mb-4">📁 歡迎來到 <strong>HttpFileServer</strong></h1>

        @if (!isAuthenticated)
        {
            <p class="lead">請先登入以開始使用檔案分享系統。</p>
            <a href="/login" class="btn btn-primary btn-lg">🔐 登入系統</a>
        }
        else
        {
            <div class="alert alert-success">
                <strong>@username 您好! 歡迎光臨</strong>。
            </div>

            <div class="d-grid gap-2 col-6 mx-auto mt-4">
                <a href="/dashboard" class="btn btn-success btn-lg">📂 前往資料夾總覽</a>
                @if (isAdmin)
                {
                    <a href="/admin" class="btn btn-warning btn-lg">🛠 管理系統</a>
                }
                <form method="post" action="/logout">
                    <button type="submit" class="btn btn-outline-danger btn-lg">🚪 登出</button>
                </form>
            </div>
        }
    </div>
</div>