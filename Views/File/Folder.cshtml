@model HttpFileServer.Models.FolderViewModel

@{
    ViewData["Title"] = $"檔案清單 - {Model.FolderName}";
}

<h2 class="mt-4">📁 資料夾：@Model.FolderName</h2>

@if (Model.Files.Length > 0)
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>檔名</th>
                <th class="text-end">大小（Bytes）</th>
                <th class="text-end">大小（MB）</th>
                <th class="text-end">最後修改</th>
                @if (Model.CanDownload)
                {
                    <th style="width: 180px;">動作</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model.Files)
            {
                <tr>
                    <td>@file.Name</td>
                    <td class="text-end">@string.Format("{0:N0}", file.Length) Bytes</td>
                    <td class="text-end">@(Math.Round(file.Length / 1024.0 / 1024.0, 1)) MB</td>
                    <td class="text-end">@file.LastWriteTime</td>
                    @if (Model.CanDownload)
                    {
                        <td>
                            <div class="d-flex gap-1">
                                <a class="btn btn-sm btn-success" href="/files/@Model.FolderName/download?file=@file.Name">
                                    <i class="bi bi-download"></i> 下載
                                </a>

                                @if (User.IsInRole("Admin"))
                                {
                                    <form method="post" action="/files/@Model.FolderName/delete" onsubmit="return confirm('確定要刪除檔案嗎？');">
                                        <input type="hidden" name="fileName" value="@file.Name" />
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> 刪除
                                        </button>
                                    </form>
                                }
                            </div>
                        </td>

                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        此資料夾中沒有檔案。
    </div>
}

@if (Model.CanUpload)
{
    <h3>上傳檔案</h3>
    <form method="post" enctype="multipart/form-data" action="/files/@Model.FolderName/upload">
        <div class="mb-3">
            <label for="file" class="form-label">選擇檔案：</label>
            <input type="file" name="file" id="file" class="form-control" required />
            <small id="fileHelp" class="form-text text-muted">最大檔案大小：5GB</small>
        </div>
        <button type="submit" class="btn btn-primary">上傳檔案</button>
    </form>
}